              <button id="delete-family">삭제</button>
              <!--ejs id 추가-->
              <button id="submit-family">입장</button>
              <!--ejs id 추가-->
            </form>
          </div>
        <!--다른 사람 방 주소 등록-->
          <div>
            <form>
              <input type="text" name="familyTitle" placeholder="방이름" required />
              <input type="text" name="familyPath" placeholder="URL" required />
              <button type="submit">방 등록하기</button>
            </form>
          </div>
        </div>
      </div>
    </main>
